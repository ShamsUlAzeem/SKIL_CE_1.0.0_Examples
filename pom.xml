            <artifactId>commons-io</artifactId>
            <version>2.5</version>
        </dependency>

        <!-- JCommander: for command line args -->
        <dependency>
            <groupId>com.beust</groupId>
            <artifactId>jcommander</artifactId>
            <version>${jcommander.version}</version>
        </dependency>
<!--
        <dependency>
            <groupId>org.nd4j</groupId>
